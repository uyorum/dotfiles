[include]
  path = .gitconfig.local
[user]
  email = uyorum.pub@gmail.com
  name = uyorum
[core]
  editor = vim
  excludesfile = ~/.gitignore.global
[alias]
  g = log --graph --date=short --format=\"%C(yellow)%h%C(reset) %C(magenta)[%ad]%C(reset)%C(auto)%d%C(reset) %s %C(cyan)@%an%C(reset)\"
  ga = log --all --graph --date=short --format=\"%C(yellow)%h%C(reset) %C(magenta)[%ad]%C(reset)%C(auto)%d%C(reset) %s %C(cyan)@%an%C(reset)\"
  s = status
  c = commit
  ca = commit --amend
  co = checkout
  cob = checkout -b
  d = diff
  dc = diff --cached
  b = branch
  ba = branch -a
[ghq]
  root = ~/src
[url "git@github.com:uyorum"]
  pushInsteadOf = https://github.com/uyorum
[push]
  default = simple
[pull]
  rebase = false
