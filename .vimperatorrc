source! ~/.vimperatorrc.local

" vim: set ft=vim:

"
" General
"
set titlestring="Mozilla Firefox"
set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
set hintchars="asdfghjkl;"
set complete=blh
set editor=emacsclient
" 入力欄に自動フォーカスしない
set focuscontent
" ビジュアルベルを表示しない
set visualbell
highlight Bell display:none
" タブに番号を表示
set tabnumbers
" commandモードでIMEオフ
style! -name=commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

"
"Key mapping
"
map <C-h> <A-left>
map <C-l> <A-right>
cmap <C-j> <Nop>
map j 5<C-e>
map k 5<C-y>
" タブのピン止めを@でトグル
" http://qiita.com/t3kot3ko/items/1b032940dbb79e88323e
javascript <<EOM
liberator.modules.commands.addUserCommand(["togglepin"], "add pin to current tab",
function(){
    var currentTab = gBrowser.mCurrentTab
    if(currentTab.pinned){
        gBrowser.unpinTab(currentTab)
    }
    else{
        gBrowser.pinTab(currentTab)
    }
});
EOM
nnoremap @ :togglepin<CR>

"
" colorscheme
"
" ヒントモードのカラースキーム
hi Hint font-family: Arial; font-size: 21px; font-weight: bold; text-shadow: -1px -1px 2px black, 1px -1px 2px black, -1px 1px 2px black, 1px 1px 2px black; color: #33cccc;
hi HintElem color: gray; background-color: #a1e4e6;
hi HintActive color: black; background-color: #ff8700;
" エラー時のカラースキーム
hi ErrorMsg color:white; background-color: #ec6aa1;

"
" qmarks
"
qmark a https://www.amazon.co.jp/
qmark c https://calendar.google.com/
qmark e https://www.evernote.com/intl/jp
qmark g https://github.com/uyorum
qmark i https://inbox.google.com/
qmark j https://www.jaccs.co.jp/icmclub/icm_login.html
qmark k https://kindle.amazon.co.jp/
qmark p https://getpocket.com/
qmark t https://www.toodledo.com/
qmark T https://trello.com/
qmark u https://entry11.bk.mufg.jp/ibg/dfw/APLIN/loginib/login?_TRANID=AA000_001
" メモ帳
qmark q data:text/html,%20<html%20contenteditable>


"
" Plugin
"
" plugin_loader
let g:plugin_loader_roots = "~\vimperator\vimperator-plugins\ ~/.vimperator/vimperator-plugins/"
let g:plugin_loader_plugins = "copy auto_reload clock autoproxychanger buffer-multiple-hints"

" copy.js
javascript <<EOM
  liberator.globalVariables.copy_templates = [
    { label: 'title', value: '%TITLE%' },
    { label: 'plain', value: '%TITLE% %URL%' },
    { label: 'anchor', value: '<a href="%URL%">%TITLE%</a>' },
    { label: 'markdown', value: '[%TITLE%](%URL%)' },
  ];
EOM
map ,m :copy<Space>markdown<CR>

" clock.js
let clock_format='[%d %t]'

"
" about:config
"
set! xpinstall.signatures.required false

" 読み込み完了メッセージ
echo "loaded vimperatorrc."

" [EOF]
